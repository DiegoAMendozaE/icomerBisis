<%- include("../partials/head.ejs") %>
    <title>Registro</title>
    <link rel="stylesheet" href="/css/createProduct.css" type="text/css">
</head>
<body>
    <%- include("../partials/header.ejs") %>
    <main>
        <div class="margin-left"></div>
        <div class="principal">
            <div class="container-form">
                <div>
                    <h2 class="titulo">Editar usuario</h2>
                </div>
                <form id="edit" action="/users/editar/<%= usersToEdit.id%>?_method=PATCH" method="POST" enctype="multipart/form-data">

                    <div>
                        <label for="nombre">Nombre:</label>  
                        <input id="nombre" type="text" name="nombre" value="<%= usersToEdit.nombre %>">
                    </div>
                    <p id="campoN" style="color: blue;"></p>

                    <div class="div">
                        <label for="apellido" class="label">Apellidos:</label><br>
                        <input id="apellido" type="text" name="apellido" value="<%= usersToEdit.apellido %>">
                    </div>
                    <p id="campoA" style="color: blue;"></p>


                    <div class="div">
                        <label for="email" class="label">Email:</label><br>
                        <input id="email" type="email" name="email" value="<%= usersToEdit.email %>">
                    </div>
                    <p id="campoE" style="color: blue;"></p>


                    <div class="div">
                        <label for="fechaNacimiento" class="label">Fecha nacimiento:</label><br>
                        <input id="fechaNacimiento" type="date" id="fechaNacimiento" name="fechaNacimiento" value="<%= usersToEdit.fechaNacimiento %>">
                    </div>
                    <p id="campoF" style="color: blue;"></p>

                    <div class="div">
                        <label for="direccion" class="label">Domicilio:</label><br>
                        <input id="direccion" type="text" id="direccion" name="direccion" value="<%= usersToEdit.direccion %>">
                    </div>
                    <p id="campoD" style="color: blue;"></p>

                    <div class="div">
                        <label for="password" class="label">Contrase√±a:</label><br>
                        <input id="password" type="password" id="password" name="password" value="<%= usersToEdit.password %>">
                    </div>
                    <p id="campoP" style="color: blue;"></p>

                    <div class="div">
                        <label for="imagen" class="label">Foto de perfil:</label><br>
                        <img src="/img/usersImagen/<%= usersToEdit.imagen %>" alt="Usuario <%=usersToEdit.name%> ">
                        <input type="file" name="imagen" class="input" value="<%= usersToEdit.imagen %>">
                    </div>
                    <p id="campoI" style="color: blue;"></p>
                    
                    <div id="nombr"></div>
                    <div>
                        <button class="submit" type="submit">Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="margin-right"></div>
    </main>
    <%- include("../partials/footer.ejs") %>
    <script src="/js/validationEditar.js"></script>
    <!-- <script src="/js/validationRegister.js"></script> -->
</body>
</html>