<!--head-->
<%- include("../partials/head.ejs") %>

<title>DevBiker</title>
<link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <!--header-->
    <%- include("../partials/header.ejs") %>

    <main>
        <div class="margin-left"></div>

        <div class="principal">
            <div class="categorias">
                <%- include("../partials/nav-categorias.ejs") %>
                <h3 class="titulo" id="titulo">Aqui encuentras nuestros productos en oferta</h3>
                <div class="card">
                    <% oferta.forEach(product => { %>
                    <article class="bikes">
                        <a href="/products/detail/<%= product.id %>">
                            <section>
                                <p class="nombre"><%=product.nombre%></p>
                            </section>
                            <section>
                                <img src="/img/<%=product.imagen%>" alt="Prototipo <%=product.nombre%> ">
                            </section>
                            <section class="datos">
                                <p class="descuento" id="descuento">%<%=product.descuento%> OFF
                                <style></style></p>
                                <p class="precio">$<%=product.precio%></p>
                            </section>
                            <section>
                                <p class="descripcion"><%=product.descripcion%></p>
                            </section>
                        </a>
                    </article>
                    <% }); %>
                </div>
            </div>
        </div>

        <div class="margin-right"></div>
    </main>

    <!--footer-->
    <%- include("../partials/footer.ejs") %>

</body>

</html>