<!--head-->
<%- include("../partials/head.ejs") %>

<title>DevBiker</title>
<link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <!--header-->
    <%- include("../partials/header.ejs") %>

    <main>
        <div class="margin-left"></div>

        <div class="principal">
            
            <div class="categorias">
                <%- include("../partials/nav-categorias.ejs") %>
                <h3 class="titulo">Urbana</h3>
                <div class="card">
                    <% urbano.forEach(urbana => { %>
                    <article class="bikes">
                        <a href="/products/detail/<%= urbana.id %>">
                        <section class="nombre-img">
                            <p class="nombre"><%=urbana.nombre%></p>
                            <img src="/img/<%=urbana.imagen%>" alt="Prototipo <%=urbana.nombre%> ">
                        </section>
                        <section class="datos">
                            <p class="descuento">%<%=urbana.descuento%> OFF</p>
                            <p class="precio">$ <%=urbana.precio%></p>
                        </section>
                        <p class="descripcion"><%=urbana.descripcion%></p>
                        </a>
                    </article>
                    <% }); %>
                </div>
            </div>

        </div>

        <div class="margin-right"></div>
    </main>

    <!--footer-->
    <%- include("../partials/footer.ejs") %>

</body>

</html>